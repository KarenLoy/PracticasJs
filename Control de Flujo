/* PARTE 3. Finalmente, cree una función que, a partir de un número de día del año (int, 0-365) y un número de hora (int, 0-23), devuelva verdadero si es horario comercial. */
function comercial(yearDay,hour){
    var hour = parseInt(prompt("ingresa tu hora de trabajo"));
    var yearDay = parseInt(prompt("ingresa tu dia de trabajo en numero siguiendo la logico: 1 para lunes, 5  para viernes"));
    if (hour >=9 || hour <= 18 && yearDay <=5 || yearDay >=1){
    alert("horario comercial");
    } else {
        alert("horario no comercial");
    }
}
comercial();
